<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping>
    	<class name="cn.supspider.bean.advs" table="advs_info">
    		<id name="id" column="id" type="int"><!-- id为主键 -->
    			<generator class="native"></generator>
    		</id>
    		<property name="advs_name" column="t_name" type="string"></property>
    		<property name="advs_context" column="t_context" type="string"></property>
    		<property name="advs_altertime" column="t_altertime" type="string"></property>
    	</class>
    </hibernate-mapping>